<!-- 설정 탭 -->
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 설정, 프로필도 같이 스크롤 되도록 추가-->
    <com.example.capstone.line_delete
        app:layout="@layout/setting_top"
        app:selectable="false" />


    <PreferenceCategory app:title="녹화 설정"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="sound"
            app:title="소리 녹음"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>


        <ListPreference
            android:title="해상도"
            android:key="resolution"
            android:defaultValue="720"
            android:entries="@array/resolution_entries"
            android:entryValues="@array/resolution_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true"/>



        <CheckBoxPreference
            app:key="rec_dark_mode"
            app:title="녹화 중 절전모드"
            app:iconSpaceReserved="false"/>
        <ListPreference
            android:title="절전모드 시간설정"
            android:key="rec_dark_mode_time"
            android:defaultValue="3"
            android:entries="@array/rec_dark_mode_time_entries"
            android:entryValues="@array/rec_dark_mode_time_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:dependency="rec_dark_mode"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreferenceCompat
            app:key="show_minimap_on_map"
            app:title="지도 표시 시 블랙박스 화면 표시"
            app:summary="지도 화면 우측 상단에 실시간 카메라 녹화 화면을 함께 표시합니다."
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="편의 설정(앱 재시작 시 적용)"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="use_pothole_model"
            app:title="포트홀 자동 탐지 사용"
            app:summary="YOLO 모델로 포트홀을 자동 탐지하고 맵에 기록합니다."
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="show_congestion"
            app:title="혼잡도 표시"
            app:summary="지도에 혼잡도 원(색깔 원)과 인원수 맵핀을 표시합니다."
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="show_pothole_markers"
            app:title="포트홀 맵핀 표시"
            app:summary="기록된 포트홀 위치 맵핀을 지도에 표시합니다."
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="enable_pothole_tts"
            app:title="포트홀 음성 안내"
            app:summary="포트홀 근접 시 및 새로운 포트홀이 기록될 때 음성으로 안내합니다."
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="저장 설정"
        app:iconSpaceReserved="false">

        <Preference
            app:key="store_path"
            app:title="저장 경로"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="store_max"
            app:title="한계 저장 용량"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>


    </PreferenceCategory>

    <PreferenceCategory app:title="앱 정보"
        app:iconSpaceReserved="false">

        <Preference
            app:key="help"
            app:title="도움말"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="service_rule"
            app:title="서비스 이용약관"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <Preference
            app:key="qna"
            app:title="문의하기"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>

        <!-- 도움말에 노션 링크 넣는 경우도 있음. 만약 이동링크 넣을 경우 이와 같이 하면됨.
        <Preference
            app:key="help"
            app:title="도움말"
            app:iconSpaceReserved="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.naver.com" />
        </Preference>

-->
    </PreferenceCategory>

    <!-- 임시로 추가함 -->
    <PreferenceCategory app:title="계정 설정"
        app:iconSpaceReserved="false">
        <Preference
            app:key="user_info"
            app:title="유저 정보"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>
        <Preference
            app:key="log_out"
            app:title="로그아웃"
            app:defaultValue="true"
            app:iconSpaceReserved="false"/>


    </PreferenceCategory>



</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StorageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/fullVideoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_video"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                />

            <View
                android:id="@+id/fullVideoUnderline"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/eventVideoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_video"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"/>

            <View
                android:id="@+id/eventVideoUnderline"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/storageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:listitem="@layout/item_storage"
            />

        <TextView
            android:id="@+id/emptyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:text="저장된 영상이 없습니다."
            android:textColor="#9CA3AF"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>